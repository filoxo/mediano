{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}
            <a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
        {{/if}}
    </nav>
    <div class="metabar">
        <div class="metabar-inner">
            <div class="metabar-inner-top">
                <h1 class="page-title text-normal">{{@blog.title}}</h1>
				{{#if @blog.navigation}}
					<button class="menu-button fa-stack">
						<i class="fa fa-bars"></i>
					</button>
				{{/if}}
            </div>
            <div class="metabar-inner-bottom">
              <h2 class="page-description text-normal">{{@blog.description}}</h2>
            </div>
        </div>
    </div>
    <a class="scroll-down fa fa-caret-down" href="#content"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
